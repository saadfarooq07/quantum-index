[package]
name = "qterm"
version = "0.1.0"
edition = "2021"
authors = ["Quandex Team <team@quandex.io>"]
description = "Quantum terminal with GPU acceleration"
repository = "https://github.com/quandex/qterm"
license = "MIT OR Apache-2.0"

[dependencies]
# Core dependencies
pyo3 = { version = "0.19", features = ["auto-initialize", "extension-module"] }
metal = { version = "0.27.0", features = ["gpu-allocator"], optional = true }
core-foundation = "0.9.3"
tokio = { version = "1.33", features = ["full", "rt-multi-thread", "sync"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
async-trait = "0.1"
futures = "0.3"

# Metrics and monitoring
metrics = "0.21"
metrics-exporter-prometheus = "0.12"
tracing = { version = "0.1", features = ["async-await"] }
tracing-subscriber = { version = "0.3", features = ["env-filter"] }

# Shell completion
rustyline = "12.0"
shellwords = "1.1"
dirs = "5.0"
shell-words = "1.1"

reqwest = { version = "0.11", features = ["json"] }

# Error handling and utilities
tracing = { version = "0.1", features = ["attributes"] }
uuid = { version = "1.4", features = ["v4", "serde"] }

# GPU acceleration
half = { version = "2.3", features = ["num-traits"] }
num = { version = "0.4", features = ["rand"] }
rayon = "1.8"

# Quantum specific
ndarray = { version = "0.15", features = ["serde"] }
quantum-algebra = "0.9"
num-complex = "0.4"

# TUI and visualization
crossterm = "0.27"
tui = "0.19"

[build-dependencies]
cc = "1.0"
metal-shaders = "0.2"
bindgen = "0.69"
pyo3-build-config = "0.19"

[features]
default = ["metal"]
metal = ["dep:metal"]
cuda = ["quandex/cuda"]
opencl = ["quandex/opencl"]

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
panic = "abort"
strip = true

[profile.dev]
opt-level = 1
debug = true
